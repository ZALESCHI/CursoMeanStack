<!DOCTYPE html>
<html>

<head>
    <meta charset="utf-8">
    <title>Cadastro de Eventos e Convidados</title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
</head>

<body>
    <header>
        <p>Bem-vindo,
            <%= usuario.nome %>
        </p>
        <h1>Lista de Pagamentos do Webservice</h1>
    </header>
    <section>
        <table>
            <thead>
                <tr>
                    <th>Evento</th>
                    <th>Preço</th>
                    <th>Cartão</th>
                    <th>CVV</th>
                </tr>
            </thead>
            <tbody>
                <% pagamentos.forEach(function(pagamento, index){ %>
                    <tr>
                        <td>
                            <%= pagamento.evento %>
                        </td>
                        <td>
                            <%= pagamento.preco %>
                        </td>             
                        <td>
                            <%= pagamento.numcartao %>
                        </td> 
                        <td>
                            <%= pagamento.cvv %>
                        </td>                                                           
                    </tr>
                <% }) %>
            </tbody>
        </table>
    </section>
    <section>
        <a href="/menu">Voltar para o menu</a>
    </section>
    <footer>
        <small>Sistema de Cadastro de Eventos e Convidados</small>
    </footer>
</body>

</html>